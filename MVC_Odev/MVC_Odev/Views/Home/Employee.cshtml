
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Employee</title>
</head>
<body>
    <div class="container bodyContainerMain mt-5">
        <div class="row">
            <h1>Employees</h1>
            <div class="bd-example-snippet bd-code-snippet">
                <div class="bd-example">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">İsim</th>
                                <th scope="col">Soyisim</th>
                                <th scope="col">Pozisyon</th>
                                <th scope="col">Telefon</th>
                                <th scope="col">#</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            @foreach (var employees in ViewBag.Employee)
                            {
                                <tr>
                                    <th scope="row">@employees.Id</th>
                                    <td>@employees.EmployeeFirstName</td>
                                    <td>@employees.EmployeeLastName</td>
                                    <td>@employees.EmployeePhone</td>
                                    <td>@employees.EmployeeTitle</td>
                                    
                                <td>
                                        <a href="/home/employee/@employees.Id" class="btn btn-outline-danger btn-sm"><img src="https://icon-library.com/images/delete-icon-png/delete-icon-png-19.jpg" style="width:20px; height:20px" /></a>
                                        <a href="/Update/UpdateEmployee/@employees.Id" class="btn btn-outline-warning btn-sm"><img src="https://imgs.search.brave.com/fkbXOaZaXvX5qWDVpsrcWcqImegnnQoUTQ-R35b8nwc/rs:fit:512:512:1/g:ce/aHR0cHM6Ly9pY29u/cy5pY29uYXJjaGl2/ZS5jb20vaWNvbnMv/cGFwaXJ1cy10ZWFt/L3BhcGlydXMtYXBw/cy81MTIvc3lzdGVt/LXNvZnR3YXJlLXVw/ZGF0ZS1pY29uLnBu/Zw" style="width:20px; height:20px" /></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <hr class="my-4">
                    <div class="d-grid gap-2">
                        <a href="/Home/EmployeeCreate" class="btn btn-dark" type="button">Çalışan Oluştur</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
